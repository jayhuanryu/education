<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.jjgo.education.education.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/p001_human"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/p001_title"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/p001_ci" />

            <TextView
                android:id="@+id/tv_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/p001_subtitle"
                android:textColor="@color/p001subTitle"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/et_pw1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pwd_input_border" />

            <EditText
                android:id="@+id/et_pw2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pwd_input_border" />

            <EditText
                android:id="@+id/et_pw3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pwd_input_border" />

            <EditText
                android:id="@+id/et_pw4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pwd_input_border" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
