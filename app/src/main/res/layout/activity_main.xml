<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context="com.jjgo.education.education.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/p001_human"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2.3">

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="@string/p001_title"
                android:textColor="#000000"
                android:textSize="60sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_ci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/p001_ci" />

                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/p001_subtitle"
                    android:textColor="@color/p001subTitle"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="5.4"
            android:gravity="center">

            <EditText
                android:id="@+id/et_pw1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#FFFFFF"
                android:layout_marginRight="20dp"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_pw2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/et_pw1"
                android:layout_marginRight="20dp"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_pw3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/et_pw2"
                android:layout_marginRight="20dp"
                android:inputType="textPassword"
                android:background="#FFFFFF"
                android:lines="1"
                android:singleLine="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/et_pw4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/et_pw3"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="#000000"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img_forbidden"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
