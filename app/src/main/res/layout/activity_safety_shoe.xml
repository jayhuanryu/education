<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_background"
    tools:context="com.jjgo.education.education.SafetyShoeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/p001_ci" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/p001_subtitle"
            android:textColor="#000000"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/img_back"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="안전화 체험장"
        android:textSize="60sp"
        android:textColor="@color/textColor_black"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>


    <LinearLayout
        android:id="@+id/ll_shoes_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_shoes_ready"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <ImageView
                android:id="@+id/img_shoes_ready"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_check"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img_shoes_ready"
                android:layout_centerHorizontal="true"
                android:text="준비"
                android:textSize="30sp"
                android:textColor="@color/textColor_black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shoes_awl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_shoes_awl"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_hammer_fall"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img_shoes_awl"
                android:layout_centerHorizontal="true"
                android:text="송곳돌출"
                android:textSize="30sp"
                android:textColor="@color/textColor_black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shoes_hammer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_shoes_hammer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/imge_fall"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/img_shoes_hammer"
                android:layout_centerHorizontal="true"
                android:text="해머낙하"
                android:textSize="30sp"
                android:textColor="@color/textColor_black"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_shoes_stop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_emergency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="긴급"
                android:textSize="60sp"
                android:textColor="@color/textcolor_Red"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/img_power"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="정지"
                android:textSize="60sp"
                android:textColor="@color/textcolor_Red"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
